<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/img_shop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="16dp" />


        <ImageView
            android:layout_width="62dp"
            android:layout_height="12dp"
            android:src="@drawable/img_member"

            app:layout_constraintStart_toStartOf="@+id/imageView15"
            app:layout_constraintTop_toTopOf="@+id/imageView15" />

        <TextView
            android:id="@+id/textView54"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:text="元气森林 石榴红树莓味苏打气泡..."
            android:textColor="@color/color_3D4255"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/imageView15"
            app:layout_constraintTop_toTopOf="@+id/imageView15" />

        <TextView
            android:id="@+id/textView55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500ml/瓶"
            android:textColor="@color/color_939393"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/textView56"
            app:layout_constraintStart_toStartOf="@+id/textView54"
            app:layout_constraintTop_toBottomOf="@+id/textView54" />

        <TextView
            android:id="@+id/textView56"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99积分+￥4.9"
            android:textColor="@color/color_FF0000"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView15"
            app:layout_constraintStart_toStartOf="@+id/textView55" />

        <TextView
            android:id="@+id/textView57"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="13dp"
            android:textSize="12sp"
            android:text="￥6.0"
            android:textColor="@color/txy_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView54" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_939393"
            android:textSize="12sp"
            android:text="x1"
            app:layout_constraintEnd_toEndOf="@+id/textView57"
            app:layout_constraintTop_toTopOf="@+id/textView55" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>