<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="shopBean"
            type="com.tx.zygj.bean.ShopBean" />

        <import type="android.view.View"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/img_shop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:text="@{shopBean.name}"
            android:textColor="@color/color_3D4255"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toTopOf="@+id/imageView6" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="62dp"
            android:layout_height="12dp"
            android:src="@drawable/img_member"
            app:layout_constraintBottom_toTopOf="@id/textView28"
            app:layout_constraintStart_toStartOf="@+id/textView27"
            app:layout_constraintTop_toBottomOf="@+id/textView27" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥6"
            android:textColor="@color/color_F38B26"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView6"
            app:layout_constraintStart_toStartOf="@+id/imageView7" />

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="99积分+￥4.9"
            android:textColor="@color/color_FF0000"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView28"
            app:layout_constraintStart_toEndOf="@+id/textView28" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="17dp"
            android:text="月售70"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView7" />

        <ImageView
            android:id="@+id/reduce_quantity"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginEnd="7dp"
            android:src="@drawable/icon_reduce"
            app:layout_constraintBottom_toBottomOf="@+id/add_quantity"
            app:layout_constraintEnd_toStartOf="@+id/quantity"
            app:layout_constraintTop_toTopOf="@+id/add_quantity"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="7dp"
            android:text="@{String.valueOf(shopBean.quantity)}"
            android:textColor="@color/color_3D4255"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/add_quantity"
            app:layout_constraintEnd_toStartOf="@+id/add_quantity"
            app:layout_constraintTop_toTopOf="@+id/add_quantity" />

        <ImageView
            android:id="@+id/add_quantity"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/icon_add_shopping"
            app:layout_constraintEnd_toEndOf="@+id/textView30"
            app:layout_constraintTop_toTopOf="@+id/textView29" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>