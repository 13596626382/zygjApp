<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="memberBean"
            type="com.tx.zygj.bean.MemberManageBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F5F5F6">

        <ImageView
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_home"
            app:layout_constraintTop_toTopOf="parent" />

        <com.llx.common.custom.TitleBarView
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="37dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="会员登记" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"

                    android:background="@drawable/fillet_ffffff_4"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="49dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="16dp"
                            android:text="姓名"
                            android:textColor="@color/color_3D4255" />

                        <EditText
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="53dp"
                            android:layout_marginEnd="16dp"
                            android:background="@color/white"
                            android:hint="请输入姓名"
                            android:text="@{memberBean.nickName}"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/icon_line" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="49dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginStart="16dp"
                            android:text="性别"
                            android:textColor="@color/color_3D4255" />

                        <LinearLayout
                            android:id="@+id/layout_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true">

                            <TextView
                                android:id="@+id/sex"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="15dp"
                                android:gravity="end"
                                android:hint="选择性别"
                                android:text="@{memberBean.gender}"
                                android:textColor="@color/color_3D4255" />

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="17dp"
                                android:rotation="180"
                                android:src="@drawable/icon_back"
                                app:tint="@color/color_3D4255" />
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/icon_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="49dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="16dp"
                            android:text="手机"
                            android:textColor="@color/color_3D4255" />

                        <EditText
                            android:id="@+id/phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="53dp"
                            android:layout_marginEnd="16dp"
                            android:background="@color/white"
                            android:hint="请输入手机号"
                            android:digits="1234567890"
                            android:inputType="phone"
                            android:text="@{memberBean.phone}"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/icon_line" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="49dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginStart="16dp"
                            android:text="生日"
                            android:textColor="@color/color_3D4255" />

                        <LinearLayout
                            android:id="@+id/layout_birthday"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true">

                            <TextView
                                android:id="@+id/birthday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="15dp"
                                android:gravity="end"
                                android:hint="选择出生日期"
                                android:text="@{memberBean.birthday}"
                                android:textColor="@color/color_3D4255" />

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="17dp"
                                android:rotation="180"
                                android:src="@drawable/icon_back"
                                app:tint="@color/color_3D4255" />
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/icon_line" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="49dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginStart="16dp"
                            android:text="会员等级"
                            android:textColor="@color/color_3D4255" />

                        <LinearLayout
                            android:id="@+id/layout_member_live"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true">

                            <TextView
                                android:id="@+id/member_live"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="15dp"
                                android:gravity="end"
                                android:hint="选择会员等级"
                                setMemberText="@{memberBean.memberType}"
                                android:textColor="@color/color_3D4255" />

                            <ImageView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center"
                                android:layout_marginEnd="17dp"
                                android:rotation="180"
                                android:src="@drawable/icon_back"
                                app:tint="@color/color_3D4255" />
                        </LinearLayout>
                    </RelativeLayout>

                    <View
                        android:id="@+id/member_view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/icon_line" />


                    <LinearLayout
                        android:id="@+id/card_layout"
                        android:layout_width="match_parent"
                        android:layout_height="49dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="16dp"
                            android:text="车牌号"
                            android:textColor="@color/color_3D4255" />

                        <EditText
                            android:id="@+id/car_number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="39dp"
                            android:layout_marginEnd="16dp"
                            android:background="@color/white"
                            android:hint="请输入车牌号"
                            android:text="@{memberBean.carNumber}"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/fillet_ffffff_4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="49dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="16dp"
                            android:text="公司名称"
                            android:textColor="@color/color_3D4255" />

                        <EditText
                            android:id="@+id/firm"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="16dp"
                            android:background="@color/white"
                            android:hint="请输入公司名称"
                            android:text="@{memberBean.firm}"
                            android:textSize="12sp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/fillet_ffffff_4"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="49dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginStart="16dp"
                            android:text="会员状态"
                            android:textColor="@color/color_3D4255" />

                        <CheckBox
                            android:id="@+id/state"
                            android:layout_width="40dp"
                            android:layout_height="19dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/checkbox_switch"
                            android:checked="@{memberBean.state.equals(`1`)}"
                            android:button="@null" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/icon_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="49dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="16dp"
                            android:text="消费密码"
                            android:textColor="@color/color_3D4255" />

                        <EditText
                            android:id="@+id/passWord"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="25dp"
                            android:layout_marginEnd="16dp"
                            android:background="@color/white"
                            android:hint="输入消费密码"
                            android:inputType="numberPassword"
                            android:digits="1234567890"
                            android:text="@{memberBean.password}"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/icon_line" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="49dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginStart="16dp"
                            android:text="免密支付"
                            android:textColor="@color/color_3D4255" />

                        <CheckBox
                            android:layout_width="40dp"
                            android:layout_height="19dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="16dp"
                            android:background="@drawable/checkbox_switch"
                            android:button="@null" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:visibility="gone"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/icon_line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="49dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="16dp"
                            android:text="推荐人"
                            android:textColor="@color/color_3D4255" />

                        <EditText
                            android:id="@+id/recommend"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="39dp"
                            android:layout_marginEnd="16dp"
                            android:background="@color/white"
                            android:hint="推荐人手机号"
                            android:text="@{memberBean.recommend}"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/save"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/change_fc664a_f38b26_26"
                    android:gravity="center"
                    android:text="保存"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>